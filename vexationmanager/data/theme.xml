 <template template_group="configuration" template_name="info" template_data="$content, $raw=TRUE, $type='information'" template_location="admin" template_app="vexationmanager"><![CDATA[<div class="ipsMessage ipsMessage_{$type}" style="margin: 15px">
    {{if $raw}}{$content|raw}{{else}}{$content}{{endif}}
</div>]]></template>
